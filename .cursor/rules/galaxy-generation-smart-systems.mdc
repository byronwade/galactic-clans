    const now = Date.now();
    const maxAge = 30000; // 30 seconds
    
    // Clean up old cache entries
    for (const [key, entry] of this.generationCache.entries()) {
        if (now - entry.lastAccessed > maxAge) {
            this.cleanupCacheEntry(key);
            this.generationCache.delete(key);
